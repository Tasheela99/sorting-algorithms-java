<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="675.0" prefWidth="674.0" spacing="20" style="-fx-font-family: 'Comfortaa SemiBold'; -fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assignment.programming3assignment.controllers.MainFormController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <Text fill="#030e25c9" text="Sorting Performance App" textAlignment="CENTER" wrappingWidth="632.8400573730469" VBox.vgrow="NEVER">
        <font>
            <Font name="Comfortaa SemiBold" size="32.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Text>

    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="2020T00880 | 2020T00910 | 2020T00854 " textAlignment="CENTER" wrappingWidth="627.6990661621094" />

    <!-- Upload Button -->
    <Button maxWidth="632.0" minHeight="50.0" onAction="#addCSVFileOnAction" prefHeight="50.0" prefWidth="632.0" style="-fx-font-family: 'Comfortaa SemiBold'; -fx-background-color: #2f3542; -fx-text-fill: #ffffff;" text="Upload CSV File" textFill="#2f3542">
        <font>
            <Font name="Comfortaa SemiBold" size="14.0" />
        </font>
      <cursor>
         <Cursor fx:constant="OPEN_HAND" />
      </cursor>
    </Button>

    <!-- Table View -->
    <TableView fx:id="tableView" prefHeight="273.0" prefWidth="571.0" style="-fx-font-family: 'Comfortaa SemiBold';" VBox.vgrow="ALWAYS">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </TableView>

    <!-- Footer -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <!-- ComboBox for numeric column selection -->
        <ComboBox fx:id="numericColumnComboBox" accessibleRole="CONTEXT_MENU" maxWidth="300.0" minHeight="40.0" minWidth="200.0" onAction="#handleNumericColumnSelection" promptText="Select numeric column" style="-fx-font-family: 'Comfortaa SemiBold'; -fx-background-color: #a4b0be; -fx-text-fill: #2f3542;">
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor></ComboBox>

        <!-- 'OR' Text -->
        <Text text="OR">
            <font>
                <Font name="Comfortaa SemiBold" size="14.0" />
            </font>
        </Text>

        <!-- TextField for column index input -->
        <TextField fx:id="columnIndexField" maxWidth="200.0" minHeight="40.0" minWidth="150.0" promptText="Enter column index" style="-fx-font-family: 'Comfortaa SemiBold';" />

        <!-- Show Column Button -->
        <Button fx:id="showColumnButton" minHeight="40.0" minWidth="100.0" prefHeight="40.0" prefWidth="201.0" style="-fx-font-family: 'Comfortaa SemiBold'; -fx-background-color: #a4b0be; -fx-text-fill: #2f3542;" text="Show Column">
            <font>
                <Font name="Comfortaa SemiBold" size="14.0" />
            </font>
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor>
        </Button>
    </HBox>

</VBox>
